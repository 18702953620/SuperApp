<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_line_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="线路方案-01"
            android:textColor="@color/color_0077ff"
            android:textSize="17sp" />

        <com.shenyuan.superapp.common.widget.SimEditText
            android:id="@+id/st_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ps_sim_edit_able="false"
            app:ps_sim_hint="出发--抵达"
            app:ps_sim_hint_size="17sp"
            app:ps_sim_label="路线"
            app:ps_sim_label_text_size="17sp"
            app:ps_sim_show_star="false" />

        <com.shenyuan.superapp.common.widget.SimEditText
            android:id="@+id/st_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ps_sim_edit_able="false"
            app:ps_sim_hint="开始--结束"
            app:ps_sim_hint_size="17sp"
            app:ps_sim_label="时间计划"
            app:ps_sim_label_text_size="17sp"
            app:ps_sim_show_star="false" />

        <com.shenyuan.superapp.common.widget.SimEditText
            android:id="@+id/st_staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ps_sim_edit_able="false"
            app:ps_sim_hint="王五"
            app:ps_sim_hint_size="17sp"
            app:ps_sim_label="宣传员"
            app:ps_sim_label_text_size="17sp"
            app:ps_sim_show_star="false" />

        <com.shenyuan.superapp.common.widget.SimEditText
            android:id="@+id/st_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ps_sim_edit_able="false"
            app:ps_sim_hint="明德理工"
            app:ps_sim_hint_size="17sp"
            app:ps_sim_label="目标学校"
            app:ps_sim_label_text_size="17sp"
            app:ps_sim_show_star="false" />

    </LinearLayout>
</layout>