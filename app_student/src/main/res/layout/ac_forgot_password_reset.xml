<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5"
        android:orientation="vertical">

        <com.shenyuan.superapp.base.widget.TitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ps_title="@string/forgot_reset_password"
            app:ps_title_background_color="@color/color_f5f5f5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:padding="15dp"
            android:text="@string/forgot_please_reset_your_password"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <com.shenyuan.superapp.common.widget.TipEditText
                android:id="@+id/et_forgot_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ps_error_button_res="@mipmap/ic_common_delete"
                app:ps_error_input_type='password'
                app:ps_error_show_button="true"
                app:ps_tip_hint="@string/forgot_input_new_password"
                app:ps_tip_hint_size="16sp"
                app:ps_tip_text_size="16sp" />

            <com.shenyuan.superapp.common.widget.TipEditText
                android:id="@+id/et_forgot_new_password_agin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ps_error_button_res="@mipmap/ic_common_delete"
                app:ps_error_input_type='password'
                app:ps_error_show_button="true"
                app:ps_error_show_line="false"
                app:ps_tip_hint="@string/forgot_input_password_agin"
                app:ps_tip_hint_size="16sp"
                app:ps_tip_text_size="16sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/forgot_password_rule"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

        <com.shenyuan.superapp.base.widget.PSTextView
            android:id="@+id/tv_forget_submit"
            style="@style/btn_single_3cbf7f"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="@string/forgot_submit" />

    </LinearLayout>
</layout>