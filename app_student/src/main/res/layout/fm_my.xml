<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_my_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cl_my_info"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:paddingTop="50dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_my_wallet"
                    android:drawablePadding="15dp"
                    android:text="@string/my_wallet"
                    android:textColor="@color/color_999999"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/ic_arrow_right_gray"
                    android:drawablePadding="25dp"
                    android:text="Â¥ 0"
                    android:textColor="@color/color_999999"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                style="@style/line_d8d8d8"
                android:layout_marginStart="70dp" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_my_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="15dp"
                    android:text="@string/my_order"
                    android:textColor="@color/color_999999"
                    android:textSize="16sp"
                    app:drawableLeftCompat="@mipmap/ic_my_order"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/ic_arrow_right_gray"
                    android:drawablePadding="25dp"
                    android:textColor="@color/color_999999"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                style="@style/line_d8d8d8"
                android:layout_marginStart="70dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_my_integral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_my_integral"
                    android:drawablePadding="15dp"
                    android:text="@string/my_integral"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/ic_arrow_right_gray"
                    android:drawablePadding="25dp"
                    android:text="0"
                    android:textColor="@color/color_999999"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                style="@style/line_d8d8d8"
                android:layout_marginStart="70dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_my_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="15dp"
                    android:text="@string/my_edit_password"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    app:drawableLeftCompat="@mipmap/ic_my_edit_pwd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="25dp"
                    android:textColor="@color/color_999999"
                    android:textSize="16sp"
                    app:drawableRightCompat="@mipmap/ic_arrow_right_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                style="@style/line_d8d8d8"
                android:layout_marginStart="70dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_my_clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="15dp"
                    android:text="@string/my_clear"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    app:drawableLeftCompat="@mipmap/ic_my_clear"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="25dp"
                    android:text="0 M"
                    android:textColor="@color/color_999999"
                    android:textSize="16sp"
                    app:drawableRightCompat="@mipmap/ic_arrow_right_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                style="@style/line_d8d8d8"
                android:layout_marginStart="70dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_my_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="15dp"
                    android:text="@string/my_about"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    app:drawableLeftCompat="@mipmap/ic_my_about"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="25dp"
                    android:textColor="@color/color_999999"
                    android:textSize="16sp"
                    app:drawableRightCompat="@mipmap/ic_arrow_right_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_my_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@mipmap/ic_my_top_back"
                app:layout_constraintDimensionRatio="375:175"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/iv_my_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="@color/color_ffffff"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@id/iv_my_head"
                app:layout_constraintTop_toTopOf="@id/iv_my_head" />

            <TextView
                android:id="@+id/tv_my_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="@color/color_ffffff"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_my_head"
                app:layout_constraintLeft_toRightOf="@id/iv_my_head" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:background="@mipmap/ic_arrow_right_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</layout>